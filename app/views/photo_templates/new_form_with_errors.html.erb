<!-- Validation failure messages -->
<% if @photo.present? %>
  <% if @photo.errors.any? %>
    <% @photo.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new photo
</h1>


<hr>

<!-- Form photo start -->
<form action="/create_photo" method="post">
<!-- Form photo end -->

  <!-- Label and input for comment_id start -->
  <div class="form-group">
    <label for="comment_id">
      Comment
    </label>

    <!-- Input for comment_id start -->
    <%= select_tag(:comment_id, options_from_collection_for_select(Comment.all, :id, :article_id, @photo.comment_id), :class => "form-control") %>
    <!-- Input for comment_id end -->
  </div>
  <!-- Label and input for comment_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Create photo
  </button>
</form>

<hr>

<a href="/photos">
  Go back
</a>
